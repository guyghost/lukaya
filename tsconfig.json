{
  "compilerOptions": {
    "baseUrl": "./src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "module": "es2022",
    "target": "es2022",
    "moduleResolution": "node",
    "outDir": "./dist",
    "downlevelIteration": true,
    "lib": ["es2022", "dom"]
  }
}