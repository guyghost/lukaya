# Lukaya Trading Bot - Example .env file

# dYdX credentials
DYDX_MNEMONIC="votre phrase mn√©monique"
DYDX_NETWORK="mainnet"
DYDX_SUBACCOUNT_NUMBER=0

# Trading symbols (comma separated)
DEFAULT_SYMBOLS="BTC-USD,ETH-USD,SOL-USD,LTC-USD"

# Global trading parameters
POLL_INTERVAL=5000
MAX_LEVERAGE=2
POSITION_ANALYSIS_INTERVAL=300000
LOG_LEVEL="info"
LOG_TO_FILE="true"
LOG_FILE_PATH="./logs/lukaya.log"

# Risk and order management
RISK_PER_TRADE=0.01
STOP_LOSS_PERCENT=0.02
DEFAULT_ACCOUNT_SIZE=10000
MAX_CAPITAL_PER_TRADE=0.25
MAX_FUNDS_PER_ORDER=0.25
USE_LIMIT_ORDERS=true
LIMIT_ORDER_BUFFER=0.0005

# Simple MA strategy
MA_SHORT_PERIOD=10
MA_LONG_PERIOD=30
DEFAULT_POSITION_SIZE=0.01
MAX_SLIPPAGE_PERCENT=1.0
MIN_LIQUIDITY_RATIO=10.0

# RSI strategy
RSI_PERIOD=14
RSI_OVERBOUGHT=70
RSI_OVERSOLD=30
RSI_POSITION_SIZE=0.01

# MACD strategy
MACD_FAST_PERIOD=12
MACD_SLOW_PERIOD=26
MACD_SIGNAL_PERIOD=9
MACD_POSITION_SIZE=0.01

# Bollinger Bands strategy
BOLLINGER_PERIOD=20
BOLLINGER_STDDEV=2
BOLLINGER_POSITION_SIZE=0.01
