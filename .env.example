# Variables d'environnement pour Vercel
# Copiez ce fichier vers .env.local et remplissez les valeurs

# Configuration de l'environnement
NODE_ENV=production

# Configuration du réseau DYDX
DYDX_NETWORK=testnet
DYDX_MNEMONIC=

# Configuration de logging
LOG_LEVEL=info
LOG_FILE_OUTPUT=false

# Configuration de trading (utilisée pour les backtests)
TRADING_DEFAULT_SYMBOLS=BTC-USD,ETH-USD
TRADING_DEFAULT_POSITION_SIZE=0.015
TRADING_MAX_LEVERAGE=2
TRADING_POLL_INTERVAL=1000
TRADING_MAX_SLIPPAGE_PERCENT=1.0
TRADING_MIN_LIQUIDITY_RATIO=5.0
TRADING_RISK_PER_TRADE=0.01
TRADING_STOP_LOSS_PERCENT=0.02
TRADING_DEFAULT_ACCOUNT_SIZE=10000
TRADING_MAX_CAPITAL_PER_TRADE=2000
TRADING_MAX_FUNDS_PER_ORDER=0.3
TRADING_POSITION_ANALYSIS_INTERVAL=300000

# Configuration des acteurs
RISK_MANAGER_MAX_OPEN_POSITIONS=3
STRATEGY_MANAGER_MAX_ACTIVE_STRATEGIES=4
PERFORMANCE_TRACKER_HISTORY_LENGTH=100

# Configuration Take Profit
TAKE_PROFIT_ENABLED=false
